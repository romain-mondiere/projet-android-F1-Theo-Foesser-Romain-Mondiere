<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BeerFragment"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="3dp"
        android:paddingVertical="10dp"
        android:paddingHorizontal="8dp"
        android:background="@color/primaryColor"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <com.google.android.material.textview.MaterialTextView
                android:gravity="top|start"
                android:layout_height="wrap_content"
                tools:text="Nom de la biÃ¨re dlcnkd dkcndsl dscskln sdklcn dsjfhfldskh"
                android:id="@+id/beer_view_beer_name"
                android:textSize="30sp"
                android:textStyle="bold"
                android:layout_weight="7"
                android:paddingHorizontal="3dp"
                android:maxLines="2"
                android:ellipsize="end"
                android:textAppearance="?attr/textAppearanceHeadline1"
                android:layout_width="0dp"
                />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/beer_view_beer_abv"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:gravity="center|end"
                android:paddingHorizontal="3dp"
                android:textAppearance="?attr/textAppearanceHeadline1"
                android:textSize="30sp"
                android:textStyle="bold"
                tools:text="8%" />
        </LinearLayout>
        <com.google.android.material.textview.MaterialTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="3dp"
            tools:text="tagline"
            android:id="@+id/beer_view_beer_tagline"
            android:textSize="20sp"
            android:textAppearance="?attr/textAppearanceBody2"
            />

    </LinearLayout>

    <com.google.android.material.textview.MaterialTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="10dp"
        android:paddingVertical="10dp"
        android:textAppearance="?attr/textAppearanceBody1"
        android:id="@+id/beer_view_beer_description"
        tools:text="Description" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:layout_gravity="left"
            android:id="@+id/beer_view_beer_image"
            />
        <com.google.android.material.textview.MaterialTextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="left"

            android:textAppearance="?attr/textAppearanceBody2"
            android:id="@+id/beer_view_beer_foods"
            tools:text="- plats qui vont avec"/>
    </LinearLayout>
</LinearLayout>